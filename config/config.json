{
    "paths":
    {
        "database": "data/VRProjects.db",
        "server": "fast.nas",
        "share": "oculusunreal",
        "content": "unreal_data"
    },

    "file_formats":
    {
        "meshes": ["fbx"],
        "textures": ["jpg", "jpeg", "png", "tga"],
        "audio": ["wav"],
        "video": ["mp4", "wmv"],
        "sources": ["ma", "mb", "zb", "max"]
    },

    "asset_prefix":
    {
        "meshes": "SM",
        "textures": "TXT",
        "skeletal": "SKM",
        "animations": "ANI"
    },

    "texture_naming":
    {
        "normal": {
            "text": ["normal", "normals", "n"],
            "suffix": "N"
        },

        "diffuse": {
            "text": ["diffuse", "albedo", "color", "d"],
            "suffix": "D"
        },

        "roughness": {
            "text": ["roughness", "rough", "r"],
            "suffix": "R"
        },

        "occlusion": {
            "text": ["occlusion", "ao"],
            "suffix": "AO"
        },

        "metallic": {
            "text": ["metallic", "m"],
            "suffix": "M"
        },
		
		"id": {
            "text": ["id"],
            "suffix": "ID"
        },

        "bump": {
            "text": ["bump", "bumpmap"],
            "suffix": "NB"
        },

        "mask": {
            "text": ["mask"],
            "suffix": "MASK"
        }
    }
}